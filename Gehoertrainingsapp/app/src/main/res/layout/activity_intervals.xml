<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btSkip"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:text="Skip"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="0 / 0"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btResetProgress"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:textAllCaps="false"
        android:text="Reset"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/ibtPlayInterval"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tvProgress"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_wave_100x100" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibtPlayInterval"
        android:layout_margin="16dp">
        <TableRow>
            <TextView
                android:id="@+id/tvEmptyTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btUnison"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Unison"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btMinor2nd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Minor 2nd"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btMajor2nd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Major 2nd"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btMinor3rd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Minor 3rd"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btMajor3rd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Major 3rd"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tvEmptyTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btPerfect4th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Perfect 4th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btTritone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Tritone"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btPerfect5th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Perfect 5th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btMinor6th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Minor 6th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btMajor6th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Major 6th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btMinor7th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Minor 7th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/btMajor7th"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Major 7th"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tvEmptyTextView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btOctave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Octave"
                android:layout_margin="5dp"
                android:textSize="16sp"/>
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/ibtIntervalSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:onClick="openIntervalSettings"
        android:src="@drawable/ic_setting_72x72" />

</RelativeLayout>