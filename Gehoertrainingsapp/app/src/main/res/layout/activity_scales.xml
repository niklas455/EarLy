<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="0 / 0"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btResetProgress"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:textAllCaps="false"
        android:text="Reset"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/ibtPlayScale"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tvProgress"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corners"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_wave_100x100" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibtPlayScale"
        android:layout_margin="16dp">
        <TableRow>
            <Button
                android:id="@+id/btMajorScale"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Major"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btNaturalMinorScale"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Natural Minor"
                android:layout_margin="5dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btHarmonicMinorScale"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Harmonic\nMinor"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/btMelodicMinorScale"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Melodic\nMinor"
                android:layout_margin="5dp"/>
        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/ibtScaleSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:onClick="openScaleSettings"
        android:src="@drawable/ic_setting_72x72" />

</RelativeLayout>