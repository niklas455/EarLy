                android:src="@drawable/img_interval_tritone" />

            <TextView
                android:id="@+id/tvPerfect5th"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
