            <TextView
                android:id="@+id/tvMajor7th"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="Major 7th:"
                android:textSize="20sp" />

